<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_card"
    android:layout_width="match_parent"
    android:background="@color/colorToolbar"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" android:layout_marginTop="5dp"
        android:elevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@color/colorToolbar" android:padding="16dp">
            <LinearLayout
                android:id="@+id/userProfile" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_circle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="@color/colorDividerBlue"
                    app:civ_border_width="1dp" />
                <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="center" android:layout_marginLeft="6dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="@color/colorTextUsername"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user"
                        android:text="17 Des 2016"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/voteImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />
            <TextView
                android:id="@+id/voteTitle"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userProfile"
                android:text="Vote Title"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorTextBlack"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/labelStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#34d487"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="OPEN"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffff"
                android:layout_below="@+id/voteTitle" />
            <ImageView
                android:id="@+id/overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/voteDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelStatus"
                android:layout_marginTop="6dp"
                android:text="Text here about spoiler detail vote. Let the voter write some explanation here ......"
                android:textColor="@color/colorTextDescription" />
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/voteDescription"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorTextCategory" />
            <TextView
                android:id="@+id/voteResponder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:text="30 Responder"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#9e9d9d" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/btnVote"
                android:text="VOTE"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlue"
                android:layout_below="@+id/line"
                android:layout_alignBottom="@+id/voteResponder" />
            <TextView
                android:id="@+id/voteCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorTextCategory"
                android:layout_below="@+id/voteTitle"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/labelStatus"
                android:layout_toEndOf="@+id/labelStatus" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

